{% extends '../partials/page.njk' %}
{% block stylesheets %}
    <link rel="stylesheet" href="../src/css/gallery.css">
{% endblock %}

{% block content %}
    <div class="container">
        {%- for image in gallery %}
            {% if loop.index%3==0 %}
                <div class="row">
            {% endif %}
                <div class="col-md-4 img-container">
                    <img class="img-responsive gallery-image" src={{image.url}} />
                </div>
            {% if loop.index%3==0 %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <div id="window-container">
        <div class="image-enlarged">
            <div class="arrow"></div>
            <div class="arrow"></div>
            <div class="enlarged-image">
                <img src="" id="window" />
            </div>
            <div><button id="close-window">Close</button></div>
        </div>
    </div>
{% endblock %}